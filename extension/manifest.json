{
"manifest_version": 3,
"name": "Web & Search Scraper (Images + Text)",
"version": "0.1.0",
"description": "Scrape all images and visible text from any webpage (incl. search results) and download as JSON.",
"action": {
"default_title": "Scrape page",
"default_popup": "popup.html"
},
"permissions": [
"activeTab",
"scripting",
"downloads",
"contextMenus"
],
"host_permissions": [
"<all_urls>"
],
"background": {
"service_worker": "background.js"
},
"icons": {
"16": "icons/icon16.png",
"48": "icons/icon48.png",
"128": "icons/icon128.png"
},
"content_scripts": [
{
"matches": ["<all_urls>"],
"js": ["content.js"],
"run_at": "document_idle"
}
]
}
